<UserControl x:Class="DSInternals.Win32.WebAuthn.Fido2UI.CredentialManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSInternals.Win32.WebAuthn.Fido2UI"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <GroupBox Header="Filter" Margin="0, 0, 0, 0">
        <DockPanel>
            <Label Name="RpIdLabel" Content="Relying party:" VerticalAlignment="Center" Width="100" DockPanel.Dock="Left" />
            <Button Name="ResetFilterButton" Content="Reset filter" Command="{Binding ResetFilterCommand}" VerticalAlignment="Center" DockPanel.Dock="Right" />
            <CheckBox Name="IsBrowserPrivateModeCheckBox" IsChecked="{Binding IsBrowserPrivateMode, Mode=TwoWay}" Content="Brower in private mode" VerticalAlignment="Center" DockPanel.Dock="Right" />
            <TextBox x:Name="RpIdTextBox" Text="{Binding RelyingPartyId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
        </DockPanel>
    </GroupBox>
</UserControl>

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;netcoreapp3.1;net472</TargetFrameworks>
    <AssemblyName>DSInternals.Win32.WebAuthn</AssemblyName>
    <RootNamespace>DSInternals.Win32.WebAuthn</RootNamespace>
    <PackageId>DSInternals.Win32.WebAuthn</PackageId>
    <Product>WebAuthn Interop Assembly</Product>
    <Title>WebAuthn Interop Assembly</Title>
    <Version>1.0</Version>
    <AssemblyVersion>1.0</AssemblyVersion>
    <ProductVersion>1.0</ProductVersion>
    <FileVersion>1.0</FileVersion>
    <Description>FIDO2 / W3C Web Authentication .NET Library for Windows Desktop and CLI Applications</Description>
    <PackageReleaseNotes>-Initial release.
- Windows 10 1903 or newer is required.
- A standalone package providing an adapter for data model defined in Fido2.Models is also available.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <!-- Enable Source Link on CI builds -->
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    <!-- DLLs need to be digitally signed first before a NuGet package is created. -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net5.0' AND '$(Configuration)' == 'Debug'">
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
  </PropertyGroup>

  <ItemGroup>
    <!-- TODO: Replace with System.Text.Json -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <!-- TODO: Replace with System.Formats.Cbor -->
    <PackageReference Include="PeterO.Cbor" Version="4.4.4" />
    <!-- Note: Classes from this namespace are part of .NET 4.7 -->
    <PackageReference Include="System.Security.Cryptography.Cng" Version="5.0.0" Condition="'$(TargetFramework)' != 'net472'" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>

  <!-- Enable the test assembly to access internal members. -->
  <ItemGroup Condition="$(SignAssembly) == 'true'">
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>$(AssemblyName).Tests, </_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
  <ItemGroup Condition="$(SignAssembly) != 'true'">
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>$(AssemblyName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
</Project>
